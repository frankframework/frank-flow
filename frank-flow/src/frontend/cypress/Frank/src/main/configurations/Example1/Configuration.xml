<Configuration 
    flow:direction="vertical"
    flow:forwardStyle="flowchart"
    flow:gridSize="50" xmlns:flow="urn:frank-flow"
    >
    <Adapter name="TestFrankFlow">
        <Receiver name="JavaReceiver" active="false" flow:x="100" flow:y="100">
            <JavaListener name="TestFrankFlow"/>
        </Receiver>
        <Receiver name="ApiReceiver" flow:x="400" flow:y="100">
            <JavaListener name="TestFrankFlow"/>
        </Receiver>
        <Pipeline firstPipe="StransformString">
            <XsltPipe name="StransformString" flow:x="100" flow:y="300">
				<Forward name="success" path="CheckString" />
			</XsltPipe>
            <XsltPipe
                name="StructuredAwnser"
                returnString="&lt;SecondPipe/&gt;"
                flow:x="400" flow:y="700"
                >
                <Forward name="success" path="EXIT"/>
            </XsltPipe>
            <XmlSwitchPipe
                name="CheckString"
                xpathExpression="local-name(/*)"
                flow:x="100" flow:y="500"
                >
                <Forward name="FirstPipe" path="ReturnAwnser"/>
				<Forward name="success" path="StructuredAwnser" />
            </XmlSwitchPipe>
            <FixedResultPipe name="ReturnAwnser" flow:x="100" flow:y="700">
                <Forward name="success" path="EXIT" />
            </FixedResultPipe>
            <Exit path="EXIT" state="success" flow:x="150" flow:y="900" />
        </Pipeline>
    </Adapter>
</Configuration>
